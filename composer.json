{
    "name": "konecnyjakub/phpt-runner",
    "description": "PHPT tests runner",
    "license": "BSD-3-Clause",
    "keywords": [
        "phpt",
        "tests",
        "runner"
    ],
    "authors": [
        {
            "name": "Jakub Konečný",
            "email": "jakub.konecny2@centrum.cz",
            "role": "Developer"
        }
    ],
    "support": {
        "sources": "https://gitlab.com/konecnyjakub/phpt-runner",
        "issues": "https://gitlab.com/konecnyjakub/phpt-runner/-/issues"
    },
    "require": {
        "php": ">=8.3.0"
    },
    "require-dev": {
        "php-parallel-lint/php-parallel-lint": "^1.4",
        "php-parallel-lint/php-console-highlighter": "^0.5",
        "squizlabs/php_codesniffer": "^3.11",
        "phpstan/phpstan-strict-rules": "^2.0",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "konecnyjakub/mytester": "^7.3"
    },
    "autoload": {
        "psr-4": {
            "Konecnyjakub\\PHPTRunner\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Konecnyjakub\\PHPTRunner\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
